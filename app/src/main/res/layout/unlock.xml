<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView android:id="@+id/unlocked" android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:padding="30dp"
        android:focusable="true"
        android:onClick="unlock"
        android:src="@drawable/ic_lock_open_black_48dp"/>

    <ImageView android:id="@+id/locked" android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:padding="30dp"
        android:focusable="true"
        android:onClick="lock"
        android:src="@drawable/ic_lock_black_48dp"/>
</LinearLayout>